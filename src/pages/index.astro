---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
    <div class="hero">
        <h1>Peter Mitten</h1>
        <p class="subtitle">Artist - San Diego & Southern California</p>
        <p class="intro">
            Contemporary artist based in San Diego and Southern California since 1977.
            Explore paintings, drawings, and artwork inspired by the California landscape.
        </p>
        <a href="/gallery/" class="cta-button">View Gallery</a>
    </div>
</BaseLayout>

<style lang="scss">
.hero {
    text-align: center;
    max-width: 700px;
    margin: 4rem auto;
    padding: 2rem;

    h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.5rem;
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
    }

    .intro {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2rem;
        background: var(--color-accent);
        color: var(--color-bg-primary);
        border-radius: 8px;
        font-size: 1.125rem;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;

        &:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }
    }
}

@media (max-width: 768px) {
    .hero h1 {
        font-size: 2.5rem;
    }
}
</style>
