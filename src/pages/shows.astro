---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Shows" description="Upcoming and past exhibitions">
    <div class="shows-container">
        <h1>Exhibitions & Shows</h1>

        <section class="shows-section">
            <h2>Upcoming</h2>
            <p><em>No upcoming shows at this time.</em></p>
        </section>

        <section class="shows-section">
            <h2>Past Exhibitions</h2>
            <p><em>To be added</em></p>
        </section>
    </div>
</BaseLayout>

<style lang="scss">
.shows-container {
    max-width: 900px;
    margin: 0 auto;

    h1 {
        margin-bottom: 2rem;
    }

    .shows-section {
        margin-bottom: 3rem;

        h2 {
            color: var(--color-accent);
            border-bottom: 2px solid var(--color-border);
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }

        p {
            color: var(--color-text-secondary);
            font-style: italic;
        }
    }
}
</style>
