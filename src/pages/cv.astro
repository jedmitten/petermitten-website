import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="CV" description="Curriculum Vitae - Peter Mitten">
    <div class="cv-container">
        <h1>Curriculum Vitae</h1>

        <section class="cv-section">
            <h2>About</h2>
            <p>
                Peter Mitten is a contemporary artist based in San Diego, California.
                Working since 1977, his practice encompasses paintings, drawings, and mixed media
                inspired by the California landscape and urban environment.
            </p>
        </section>

        <section class="cv-section">
            <h2>Education</h2>
            <p><em>To be added</em></p>
        </section>

        <section class="cv-section">
            <h2>Selected Exhibitions</h2>
            <p><em>To be added</em></p>
        </section>

        <section class="cv-section">
            <h2>Collections</h2>
            <p><em>To be added</em></p>
        </section>

        <section class="cv-section">
            <h2>Contact</h2>
            <p>
                Email: <a href="mailto:contact@petermitten.com">contact@petermitten.com</a>
            </p>
        </section>
    </div>
</BaseLayout>

<style lang="scss">
.cv-container {
    max-width: 800px;
    margin: 0 auto;

    h1 {
        margin-bottom: 2rem;
    }

    .cv-section {
        margin-bottom: 3rem;

        h2 {
            color: var(--color-accent);
            border-bottom: 2px solid var(--color-border);
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }

        p {
            line-height: 1.8;
            color: var(--color-text-secondary);
        }
    }
}
</style>
